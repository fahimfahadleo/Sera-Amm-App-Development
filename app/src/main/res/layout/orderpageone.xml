<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/commonpagebg"
    tools:context=".OrderPageOne">


    <ImageView
        android:id="@+id/orderpageonebackbutton"
        android:src="@drawable/baseline_arrow_back_black_48dp"
        android:layout_width="24dp"
        android:layout_margin="8dp"
        android:layout_height="24dp"
        tools:ignore="ContentDescription"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/commonpagebg"
        android:layout_marginBottom="10dp"
        android:layout_weight="1">


        <LinearLayout
            android:id="@+id/orderpageonefinallinearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/orderpageoneimage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/singleitem"
                android:layout_margin="8dp"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/orderpageonename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font"
                        android:text=""
                        android:textSize="@dimen/header"
                        android:fontFamily="@font/hind_siliguri"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/orderpageoneordernow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/baseline_add_shopping_cart_24px"
                        tools:ignore="ContentDescription" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/orderpageoneprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#5D8A61"
                        android:text=""
                        android:textSize="@dimen/name"
                        android:fontFamily="@font/hind_siliguri"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/hind_siliguri"
                        android:text="@string/kuriyar_free"
                        android:textColor="@color/font"
                        android:textSize="@dimen/price" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font"
                        android:text="@string/rating"
                        android:textSize="@dimen/price"
                        android:fontFamily="@font/hind_siliguri"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="0dp"/>


                    <ImageView
                        android:id="@+id/orderpageonerating1"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_gravity="center"
                        tools:ignore="ContentDescription"
                        android:background="@drawable/rating"/>
                    <ImageView
                        android:id="@+id/orderpageonerating2"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="1dp"
                        android:layout_gravity="center"
                        tools:ignore="ContentDescription"
                        android:layout_marginEnd="1dp"
                        android:background="@drawable/rating"/>
                    <ImageView
                        android:id="@+id/orderpageonerating3"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="1dp"
                        android:layout_gravity="center"
                        tools:ignore="ContentDescription"
                        android:layout_marginEnd="1dp"
                        android:background="@drawable/rating"/>
                    <ImageView
                        android:id="@+id/orderpageonerating4"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="1dp"
                        tools:ignore="ContentDescription"
                        android:background="@drawable/rating"/>
                    <ImageView
                        android:id="@+id/orderpageonerating5"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="1dp"
                        android:background="@drawable/rating"
                        tools:ignore="ContentDescription" />


                </LinearLayout>

                <TextView
                    android:id="@+id/orderpageonedetails"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/price"
                    android:fontFamily="@font/hind_siliguri"
                    android:text=""/>
                <TextView
                    android:id="@+id/orderpageonereadmore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/price"
                    android:text="@string/read_more"
                    android:fontFamily="@font/hind_siliguri"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/font"
                    />






            </LinearLayout>

            </LinearLayout>


    </ScrollView>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="1dp"
        card_view:cardMaxElevation="1dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ammbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="@string/aam"
                    android:textSize="@dimen/name"
                    android:fontFamily="@font/hind_siliguri"
                    android:textColor="@color/font"
                    />


                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>


                <Button
                    android:id="@+id/chart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="@string/cart"
                    android:textSize="@dimen/name"
                    android:fontFamily="@font/hind_siliguri"
                    android:textColor="@color/font"
                    />


                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>


                <Button
                    android:id="@+id/chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/hind_siliguri"
                    android:text="@string/chat"
                    android:textColor="@color/font"
                    android:textSize="@dimen/name" />
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>




    </android.support.v7.widget.CardView>
    

</LinearLayout>