<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/commonpagebg"
    tools:context=".HomePage">






    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="1dp"
        android:layout_marginBottom="8dp"
        card_view:cardElevation="1dp"
        card_view:cardMaxElevation="1dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hind_siliguri"
                android:text="@string/sera_amm"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/font"
                android:padding="8dp"
                android:textSize="@dimen/header" />
        </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/homepageinfoholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="1dp"
                android:layout_marginBottom="4dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/current"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/hind_siliguri"
                    android:text="@string/je_amm_gulo_bajare_ache"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:maxLines="1"
                    android:textColor="@color/font"
                    android:textSize="@dimen/name" />

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="1dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/future"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/poroborti_amm_guli"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/name"
                    android:maxLines="1"
                    android:fontFamily="@font/hind_siliguri"
                    android:textColor="@color/font"
                    android:layout_gravity="center"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="1dp"
                android:layout_marginBottom="4dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/dateofripe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/hind_siliguri"
                    android:text="@string/amm_pakar_anumanik_somoy"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:maxLines="1"
                    android:textColor="@color/font"
                    android:textSize="@dimen/name" />

            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="1dp"
        card_view:cardMaxElevation="1dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/mangoes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/hind_siliguri"
                    android:text="@string/aam"
                    android:textColor="@color/font"
                    android:textSize="@dimen/name" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />


                <Button
                    android:id="@+id/shoppingchart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/hind_siliguri"
                    android:text="@string/cart"
                    android:textColor="@color/font"
                    android:textSize="@dimen/name" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />


                <Button
                    android:id="@+id/chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/hind_siliguri"
                    android:text="@string/chat"
                    android:textColor="@color/font"
                    android:textSize="@dimen/name" />
            </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
